<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".presentation.view.fragment.Estudiante.Tipo2EstudianteFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tipo 2 Léxico"
        android:gravity="center"/>

    <LinearLayout
        android:id="@+id/ll_est_lex2_intent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:background="@color/editTextColorWhite"
        android:layout_marginBottom="50dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="Ejercicio Léxico" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="Intento:" />

            <TextView
                android:id="@+id/txt_est_lex2_intento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/orange"
                android:gravity="center_horizontal"
                android:text="3"
                android:textSize="25dp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout

        android:id="@+id/ll_docente_tipo2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_estudiante_escuchar_tipo2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/recording_96" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10sp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tono"
                        android:textSize="16sp" />

                    <SeekBar
                        android:id="@+id/estudiante_seek_bar_pitch"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:progress="50" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Velocidad"
                        android:textSize="16sp" />

                    <SeekBar
                        android:id="@+id/estudiante_seek_bar_speed"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:progress="50" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@color/colorAccent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_estudiante_tipo2_casilla1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bell_96px" />

            <Button
                android:id="@+id/btn_estudiante_tipo2_casilla2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bell_96px" />

            <Button
                android:id="@+id/btn_estudiante_tipo2_casilla3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bell_96px" />


        </LinearLayout>

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@color/colorAccent"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btn_estudiante_tipo2_casilla4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bell_96px" />

            <Button
                android:id="@+id/btn_estudiante_tipo2_casilla5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bell_96px" />
            <Button
                android:id="@+id/btn_estudiante_tipo2_casilla6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bell_96px" />
        </LinearLayout>

        <TextView
            android:id="@+id/txt_estudiante_resultado_lex2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:hint="Campanadas"
            android:textSize="20dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@color/editTextColorWhite"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_margin="2dp">

                <Button
                    android:id="@+id/btn_estudiante_restart_lex2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:background="@drawable/restart_64px"
                    android:visibility="visible" />
            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Reiniciar"
                android:textSize="20dp"
                android:textStyle="bold" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_estudiante_tipo2_enviar_respuesta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enviar Respuesta"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:theme="@style/RaisedButtonDark" />
    </LinearLayout>


</LinearLayout>