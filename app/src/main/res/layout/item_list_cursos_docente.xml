<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:orientation="vertical"
                android:padding="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">



                    <TextView
                        android:id="@+id/txtIDgrupo_LCD"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight=".8"
                        android:hint="@string/idGrupo"
                        android:text=""
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/tsize_documento_idgrupo"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:visibility="gone"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">



                    <TextView
                        android:id="@+id/txtNombreGrupo_LCD"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight=".8"
                        android:hint="@string/NombreGrupo"
                        android:text=""
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/tsize_documento_idgrupo"
                        android:textStyle="bold"
                        android:gravity="center"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">



                    <TextView
                        android:id="@+id/txtID_Curso_LCD"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight=".8"
                        android:hint="@string/idGrupoCurso"
                        android:text=""
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/tsize_documento"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:visibility="gone"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">



                    <TextView
                        android:id="@+id/txtInstituto_LCD"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight=".8"
                        android:hint="@string/IDinstituto_CL"
                        android:text=""
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/tsize_documento"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:visibility="gone"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.5">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"

                    android:layout_marginLeft="25dp"
                    android:background="@drawable/img_2" />
            </LinearLayout>

        </LinearLayout>


</android.support.v7.widget.CardView>