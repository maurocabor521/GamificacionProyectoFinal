<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/escuela_aula"
    android:orientation="vertical"
    tools:context=".presentation.view.activity.estudiante.HomeEstudianteActivity">

    <include layout="@layout/actionbar_toolbar" />

    <VideoView
        android:id="@+id/vv_home_est_presentacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/imagen_height_150dp"
        android:layout_gravity="center_horizontal"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <FrameLayout
            android:id="@+id/container_HomeEstudiante"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible">

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fbtn_estudiante_home_deberes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:src="@drawable/flecha_atras" />

        </FrameLayout>
    </LinearLayout>

</LinearLayout>

